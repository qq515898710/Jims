<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.mo.jims.coop.repository.UserLogRepository">

	<sql id="select_user">SELECT name, username, password, rid FROM tb_user</sql>
	
	<sql id="selcet_user_role">SELECT id, type FROM tb_user_role </sql>
	
	<sql id="selcet_user_log">SELECT id, name, time FROM tb_user_log</sql>
	
	<sql id="selcet_tb_sell">SELECT id,gid,cid,uid,unit_cost,amount,sum,time,clearing_form,headler FROM tb_sell</sql>
	
	<sql id="selcet_tb_sell_return">SELECT id,gid,cid,uid,unit_cost,amount,sum,time,clearing_form,headler FROM tb_sell_return</sql>
	
	<sql id="selcet_tb_stock">SELECT id,pid,uid,gid,variety_amount,unit_cost,amount,sum,check_conclusion,time,clearing_form,handler FROM tb_stock</sql>
	
	<sql id="selcet_tb_stock_return">SELECT id,pid,uid,gid,variety_amount,unit_cost,amount,sum,check_conclusion,time,clearing_form,handler FROM tb_return</sql>
	
	<insert id="insert" parameterType="TbUserLog" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO tb_user_log(name, time)
		VALUE(#{tbUser.name}, #{time})
	</insert>
	
	<update id="updateByPK" parameterType="TbUserLog">
		UPDATE tb_user_log SET 
			username=#{username},
			password=#{password},
			rid=#{tbUserRole.id}
		WHERE id=#{id}
	</update>
	
	<delete id="deleteByPK" >
		DELETE FROM tb_user_log WHERE id=#{id}
	</delete>
	
	<select id="selectByPK" resultMap="userLogResultMap">
		<include refid="selcet_user_log"/>
		WHERE id = #{id}
	</select>
	
	<select id="countAllByName" resultType="int">
		SELECT COUNT(*) FROM tb_user_log WHERE name=#{name}
	</select>
	
	<select id="selectAllByName" resultMap="userLogResultMap">
		<include refid="selcet_user_log"/>
		WHERE name=#{name} 
		ORDER BY id DESC
		LIMIT #{offset}, #{size}
	</select>
	
	<!-- userLog -->
	<resultMap type="TbUserLog" id="userLogResultMap">
		<id property="id" column="id" />
		<result property="time" column="time"/>
		<association property="tbUser"  javaType="TbUser">
			<id property="name" column="name"/>
			<result property="username" column="username"/>
			<result property="password" column="password"/>
		</association>
	</resultMap>
	
</mapper>