<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.mo.jims.coop.repository.UserRepository">

	<sql id="select_user">SELECT name, username, password, rid FROM tb_user</sql>
	
	<sql id="selcet_user_role">SELECT id, type FROM tb_user_role </sql>
	
	<sql id="selcet_user_log">SELECT id, name, time FROM tb_user_role</sql>
	
	<sql id="selcet_tb_sell">SELECT id,gid,cid,uid,unit_cost,amount,sum,time,clearing_form,headler FROM tb_sell</sql>
	
	<sql id="selcet_tb_sell_return">SELECT id,gid,cid,uid,unit_cost,amount,sum,time,clearing_form,headler FROM tb_sell_return</sql>
	
	<sql id="selcet_tb_stock">SELECT id,pid,uid,gid,variety_amount,unit_cost,amount,sum,check_conclusion,time,clearing_form,handler FROM tb_stock</sql>
	
	<sql id="selcet_tb_stock_return">SELECT id,pid,uid,gid,variety_amount,unit_cost,amount,sum,check_conclusion,time,clearing_form,handler FROM tb_return</sql>
	
	<insert id="insert" parameterType="TbUser">
		INSERT INTO tb_user(name,username,password,rid)
		VALUE(#{name}, #{username}, #{password}, 2)
	</insert>
	
	<update id="updateByPK" parameterType="TbUser">
		UPDATE tb_user SET 
			username=#{username},
			password=#{password},
			rid=#{tbUserRole.id}
		WHERE name=#{name}
	</update>
	
	<select id="selectByPK" resultMap="userResultMap">
		<include refid="select_user"/>
		WHERE name = #{id}
	</select>
	
	<select id="selcetByName" resultMap="userResultMap">
		<include refid="select_user"/>
		WHERE name = #{name}
	</select>
		
	<select id="countAll" resultType="int">
		SELECT COUNT(*) FROM tb_user 
	</select>
	
	<select id="selectAll" resultMap="userResultMap">
		<include refid="select_user"/>
		limit #{offset}, #{size}
	</select>
	
	<!-- userRole -->
	<resultMap type="TbUserRole" id="userRoleResultMap">
		<id property="id" column="id"/>
		<result property="type" column="type"/>
	</resultMap>
	
	<!-- user -->
	<resultMap type="TbUser" id="userResultMap">
		<id property="name" column="name" />
		<result property="username" column="username"/>
		<result property="password" column="password"/>
		<association property="tbUserRole"  javaType="TbUserRole">
			<id property="id" column="rid"/>
			<result property="type" column="type"/>
		</association>
	</resultMap>
	
